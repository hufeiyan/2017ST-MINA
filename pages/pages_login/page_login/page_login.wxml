<!--page_login.wxml-->
<view class = "loginTitleView">
<text class = "loginTitle">ST系统</text>
</view>

<view class = "textGroup">

  <image src="../../../sources/images/login-icon-head.png" 
  mode="aspectFit" 
  class="headIcon">
  </image>

  <view class = "underlineGroup">

    <input id="mobileID"
    value="{{mobile}}" 
    bindinput="bindInput" bindfocus="bindFocus" bindblur="bindBlur"
    class="loginText" 
    placeholder="请输入用户名" placeholder-class='loginPlaceHolder'> 
    </input>

    <icon id="mobileID"
    type="clear" 
    class="loginIcon" 
    bindtap="bindClearIcon"
    hidden = "{{clearMobileIconHidden}}"></icon>
  
  </view>
  
</view>

<view class = "textGroup">
  <image 
  src="../../../sources/images/login-icon-lock.png" 
  mode="aspectFit" 
  class="headIcon">
  </image>

  <view class = "underlineGroup">

  <input id="pwdID"
  value="{{password}}" password="{{pwdShow}}"
  bindinput="bindInput" bindfocus="bindFocus" bindblur="bindBlur"
  class="loginText" 
  placeholder-class='loginPlaceHolder' placeholder="请输入密码"
  >
  </input>

  <icon  id="pwdID"
  type="clear" 
  class="loginIcon" 
  bindtap="bindClearIcon" 
  hidden = "{{clearPWDIconHidden}}"></icon>

  <image src="../../../sources/images/login-icon-eye.png" 
  mode="aspectFit" 
  class="loginIcon"  
  bindtap="bindShowPWDIcon">
  </image>

  </view>

</view>

<button class="loginBtn" bindtap="bindLoginBtn"> 登录 </button>

<modal title="提示" hidden="{{modalHidden}}" no-cancel bindconfirm="modalChange">
  <view class="modalType"> {{modalMsg}} </view>
</modal>

